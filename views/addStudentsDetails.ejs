<%- include("navbar.ejs")%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Student Details</title>
    <link rel="stylesheet" href="style/addStudentsDetails.css">
    <link rel="stylesheet" href="style/navbar.css">
</head>
<body>
    <div class="container">
        <h2>Add Student Details</h2>
        <form action="/addStudent" method="post">
            <div class="row">
                <div class="row-item">
                    <label for="fullname">Full Name</label>
                    <input type="text" id="fullname" name="fullname" placeholder="your vaild fullname" required>
                </div>
                <div class="row-item">
                    <label for="address">Address</label>
                    <input type="text" id="address" name="address" placeholder="your vaild address" required>
                </div>
            </div>
    
            <div class="row">
                <div class="row-item">
                    <label for="grade">Grade</label>
                    <input type="text" id="grade" name="grade" placeholder="your grade" required>
                </div>
                <div class="row-item">
                    <label for="rollno">Roll number</label>
                    <input type="text" id="rollno" name="rollno" placeholder="your roll number" required>
                </div>
            </div>
    
            <div class="row">
                <div class="row-item">
                    <label for="age">Age</label>
                    <input type="text"  id="age" name="age" placeholder="your age" required>
                </div>
                <div class="row-item">
                    <label for="contactno">Contact Number</label>
                    <input type="text" id="contactno" name="contactno" placeholder="Your contact number" required>
                </div>
            </div>
    
            <div class="row">
                <div class="row-item">
                    <button class="add-button">Add Student</button>
                </div>
            </div>
        </form>
    </div>
    


</body>
</html>
